<div class="contents">
<div class="form-wrapper">
<div class="sign-in"><h1>Forgot your password?</h1></div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-item">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail" %>
  </div>

  <div class="button-panel">
    <input type="submit" class="button" title="Sign up" name="commit" value="Send"></input>
  </div>
<% end %>

<div class="form-footer">
<p><a href="../sign_in">LOG IN</a></p>
<p><a href="../sign_up">Create an account</a></p>

</div>
</div>
</div>

