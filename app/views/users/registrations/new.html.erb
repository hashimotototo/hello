<div class="contents">
<div class="form-wrapper">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="sign-in"><h1>Sign Up</h1></div>
 <form>
  <div class="form-item">
 　 <label for="name"></label>
  　<%= f.text_field :name, autofocus: true, placeholder: "name" %>
　</div>
　<div class="form-item">
    <label for="email"></label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail" %>
  </div>

  <div class="form-item">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail(確認用)" %>
  </div>

  <div class="form-item">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    </div>

  <div class="form-item">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password(確認用)" %>
  </div>

  
  <div class="button-panel">
    <input type="submit" class="button" title="Sign up" name=”commit” value="SIGN UP"></input>
  </div>
  <div class="form-footer">
<p><a href="../users/sign_in">LOG IN</a></p>

<% end %>


</div>
</div>