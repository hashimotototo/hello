<div class="contents">


<div class="form-wrapper">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="sign-in"><h1>LOG IN</h1></div>
  <form>
    <div class="form-item">
      <label for="email"></label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail" %>
    </div>
    <div class="form-item">
      <label for="password"></label>
      <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
    </div>
    
    <div class="button-panel">
      <input type="submit" class="button" title="Log In" name=”commit” value="LOG IN"></input>
    </div>
    <div class="form-footer">
    <p><a href="../users/sign_up">Create an account</a></p>
    <p><a href="../users/password/new">Forgot password?</a></p>
  </div>
    </div>
    
  </form>
  
<% end %>
</div>

</div>